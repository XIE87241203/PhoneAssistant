<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackgroundColor"
    tools:context="com.assistant.xie.model.phone_state.PhoneStateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Switch
            android:id="@+id/sw_auto_click"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_item_height"
            android:background="@color/defaultItemColor"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/default_item_padding"
            android:paddingStart="@dimen/default_item_padding"
            android:text="@string/red_envelope_auto_click"
            android:textColor="@color/defaultTextColor" />
    </LinearLayout>

</ScrollView>
