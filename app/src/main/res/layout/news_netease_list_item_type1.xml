<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_netease_item1_height"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/news_netease_item1_vertical_padding"
    android:paddingEnd="@dimen/news_netease_item1_horizontal_padding"
    android:paddingStart="@dimen/news_netease_item1_horizontal_padding"
    android:background="@color/defaultItemColor"
    android:paddingTop="@dimen/news_netease_item1_vertical_padding">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/news_netease_item1_img_width"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/news_netease_item1_img_margen_end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/text_holder"
            android:gravity="top"
            android:textColor="@color/news_netease_item_title_text_color"
            android:textSize="@dimen/news_netease_item1_title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/news_netease_item1_dec_padding_bottom">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="1小时前"
                android:textColor="@color/news_netease_item_dec_text_color"
                android:textSize="@dimen/news_netease_item1_dec_text_size" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/news_netease_comment_count"
                android:textColor="@color/news_netease_item_dec_text_color"
                android:textSize="@dimen/news_netease_item1_dec_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>